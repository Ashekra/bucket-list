{% extends 'base.html.twig' %}

{% block title %}Make a wish{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<main class="container mt-5 mb-5" role="main">
    <div class="example-wrapper mt-5 mb-5 text-center">
    {% if app.user %}
        <h1>Hello {{ app.user.pseudo }} ! </h1>
    {% else %}  
        <h1>Hello You ! </h1>
    {% endif %}
        <img src="{{ asset('../public/img/cutyrabbit.png') }}" alt="lapin d'amour">
    </div>
</main>
{% endblock %}
